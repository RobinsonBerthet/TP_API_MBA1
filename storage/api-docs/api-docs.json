{
    "openapi": "3.0.0",
    "info": {
        "title": "Nom de ton API",
        "description": "Description de ton API",
        "version": "1.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Inscription de l'utilisateur",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User created successfully"
                                        },
                                        "user": {
                                            "type": "object"
                                        },
                                        "authorisation": {
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "example": "token"
                                                },
                                                "type": {
                                                    "type": "string",
                                                    "example": "bearer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Connexion de l'utilisateur",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Déconnexion de l'utilisateur",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Déconnexion réussie"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token invalide"
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Récupération de l'utilisateur authentifié",
                "operationId": "getAuthenticatedUser",
                "responses": {
                    "200": {
                        "description": "Utilisateur authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "email": {
                                            "type": "string",
                                            "example": "john.doe@example.com"
                                        },
                                        "nom": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "statut": {
                                            "type": "string",
                                            "example": "actif"
                                        },
                                        "date_creation": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-10-26T12:30:00Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Utilisateur non authentifié"
                    }
                }
            }
        },
        "/email-checker/{email}": {
            "get": {
                "summary": "Vérifie un email avec l'API Hunter.io",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "description": "L'adresse email à vérifier.",
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informations sur l'email.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "email": "test@example.com",
                                    "score": "95%",
                                    "status": "valid"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Adresse email invalide ou erreur API Hunter.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Adresse email invalide"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Utilisateur non authentifié.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Utilisateur non authentifié"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/envoyer-email": {
            "post": {
                "summary": "Envoie un email à un destinataire.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "destinataire": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "objet": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    },
                                    "nombreEmail": {
                                        "type": "integer"
                                    }
                                },
                                "required": [
                                    "destinataire",
                                    "objet",
                                    "message",
                                    "nombreEmail"
                                ]
                            },
                            "example": {
                                "destinataire": "recipient@example.com",
                                "objet": "Test Email",
                                "message": "Ceci est un message de test.",
                                "nombreEmail": 3
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Email envoyé avec succès."
                    },
                    "401": {
                        "description": "Utilisateur non authentifié.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Utilisateur non authentifié"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/check-password": {
            "post": {
                "summary": "Vérifie si un mot de passe est courant.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "password"
                                ]
                            },
                            "example": {
                                "password": "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Le mot de passe est-il courant ?",
                        "content": {
                            "application/json": {
                                "example": {
                                    "exists": true
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Utilisateur non authentifié.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Utilisateur non authentifié"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-password": {
            "get": {
                "summary": "Génère un mot de passe aléatoire.",
                "responses": {
                    "200": {
                        "description": "Mot de passe généré.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "password": "A1b2C3d4E5f6G7h8"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Utilisateur non authentifié.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Utilisateur non authentifié"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/get-subdomains/{domain}": {
            "get": {
                "summary": "Récupère les sous-domaines d'un domaine.",
                "parameters": [
                    {
                        "name": "domain",
                        "in": "path",
                        "required": true,
                        "description": "Le domaine pour lequel récupérer les sous-domaines.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des sous-domaines.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "subdomains": [
                                        "www",
                                        "mail",
                                        "api"
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Utilisateur non authentifié.",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Utilisateur non authentifié"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Authentification",
            "description": "Authentification"
        }
    ]
}